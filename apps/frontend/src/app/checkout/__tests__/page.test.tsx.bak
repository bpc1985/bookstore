import { describe, it, expect, vi, beforeEach } from 'vitest';
import { render, screen, act } from '@testing-library/react';
import { QueryClient, QueryClientProvider } from '@tanstack/react-query';
import CheckoutPage from '@/app/checkout/page';

vi.mock('next/link', () => ({
  default: ({ children, href, ...props }: any) => (
    <a href={href} {...props}>{children}</a>
  ),
}));

vi.mock('next/navigation', () => ({
  useRouter: () => ({ push: vi.fn() }),
}));

vi.mock('@/stores/auth', () => ({
  useAuthStore: vi.fn(),
}));

const authenticatedStore = {
  user: { id: 1, email: 'test@example.com' },
  isInitialized: true,
  logout: vi.fn(),
};

const authenticatedCart = {
  items: [{ id: 1, book: { id: 1, title: 'Test Book', price: 29.99, quantity: 2 }],
  total_items: 2,
  subtotal: '59.98',
  isLoading: false,
  fetchCart: vi.fn(),
  updateItem: vi.fn(),
  removeItem: vi.fn(),
  clearCart: vi.fn(),
};

vi.mock('@/stores/cart', () => ({
  useCartStore: vi.fn(),
}));

vi.mock('@/lib/hooks', () => ({
  useCreateOrderMutation: () => ({
    mutateAsync: vi.fn(),
    isPending: false,
  }),
}));

vi.mock('sonner', () => ({
  toast: {
    success: vi.fn(),
    error: vi.fn(),
  },
}));

vi.mock('@/lib/api', () => ({
  api: {
    getCart: vi.fn(),
    getOrders: vi.fn(),
  },
}));

describe('CheckoutPage', () => {
  let queryClient: QueryClient;

  const createWrapper = ({ children }: { children: React.ReactNode }) => (
    <QueryClientProvider client={queryClient}>{children}</QueryClientProvider>
  );

  beforeEach(() => {
    vi.clearAllMocks();
    queryClient = new QueryClient({
      defaultOptions: {
        queries: { retry: false },
        mutations: { retry: false },
      },
    });
  });

  it('should render when not authenticated', () => {
    vi.mocked(require('@/stores/auth')).mockReturnValue({
      user: null,
      isInitialized: false,
    });

    vi.mocked(require('@/stores/cart')).mockReturnValue({
      cart: {
        items: [],
        total_items: 0,
        subtotal: '0.00',
      },
      isLoading: false,
      fetchCart: vi.fn(),
      updateItem: vi.fn(),
      removeItem: vi.fn(),
      clearCart: vi.fn(),
    });

    vi.mocked(require('@/lib/api')).mockReturnValue({
      getCart: vi.fn().mockResolvedValue({
        items: [],
        total_items: 0,
        subtotal: '0.00',
      }),
      getOrders: vi.fn(),
    });

    render(<CheckoutPage />, { wrapper: createWrapper });

    expect(screen.getByText(/checkout/i)).toBeInTheDocument();
    expect(screen.getByText(/your cart is empty/i)).toBeInTheDocument();
  });

  it('should show form when authenticated', () => {
    vi.mocked(require('@/stores/auth')).mockReturnValue(authenticatedStore);
    vi.mocked(require('@/stores/cart')).mockReturnValue(authenticatedCart);
    vi.mocked(require('@/lib/api')).mockReturnValue({
      getCart: vi.fn().mockResolvedValue({
        items: [{ id: 1, book: { id: 1, title: 'Test Book', price: 29.99, quantity: 2 }],
        total_items: 2,
        subtotal: '59.98',
      }),
      getOrders: vi.fn(),
    });

    render(<CheckoutPage />, { wrapper: createWrapper });

    expect(screen.getByText(/checkout/i)).toBeInTheDocument();
    expect(screen.getByText(/order summary/i)).toBeInTheDocument();
    expect(screen.getByText(/59\.98/)).toBeInTheDocument();
  });

  it('should show form when authenticated', () => {
    vi.mocked(require('@/stores/auth')).mockReturnValue(authenticatedStore);
    vi.mocked(require('@/stores/cart')).mockReturnValue(authenticatedCart);
    vi.mocked(require('@/lib/api')).mockReturnValue({
      getCart: vi.fn().mockResolvedValue({
        items: [{ id: 1, book: { id: 1, title: 'Test Book', price: 29.99, quantity: 2 }],
        total_items: 2,
        subtotal: '59.98',
      }),
      getOrders: vi.fn(),
    });

    render(<CheckoutPage />, { wrapper: createWrapper });

    expect(screen.getByText(/checkout/i)).toBeInTheDocument();
    expect(screen.getByText(/order summary/i)).toBeInTheDocument();
    expect(screen.getByText(/59\.98/)).toBeInTheDocument();
  });
});
